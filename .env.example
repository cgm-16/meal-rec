# Environment Variables Configuration
# Copy this file to .env.local for local development
# Never commit actual .env.local files with real secrets to version control

# Database Configuration  
# For local development:
MONGO_URL=mongodb://localhost:27017/meal-rec
# For production (MongoDB Atlas format):
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/meal-rec?retryWrites=true&w=majority&appName=meal-rec

# NextAuth Configuration
NEXTAUTH_SECRET=your-secret-key-here-minimum-32-characters
NEXTAUTH_URL=http://localhost:3000

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PIN=1234

# Optional: Monitoring & Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id

# Optional: Environment-specific settings
NODE_ENV=development

# Test Environment Variables (for CI/CD)
# MONGO_URL_TEST=mongodb://localhost:27017/meal-rec-test
# NEXTAUTH_URL_TEST=http://localhost:3000

# Optional: Weather API (Open-Meteo is free, no key required)
# No environment variable needed for Open-Meteo API

# Optional: Rate Limiting (if implemented)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Optional: Database Connection Pool Settings
# MONGO_MAX_POOL_SIZE=10
# MONGO_MIN_POOL_SIZE=1